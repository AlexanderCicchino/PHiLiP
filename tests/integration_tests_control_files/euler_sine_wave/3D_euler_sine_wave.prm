# -------------------
# Number of dimensions
set dimension = 3

set test_type = euler_sine_wave

set use_weak_form = false

set flux_nodes_type = GL

set overintegration = 0

set do_renumber_dofs = false

set use_split_form = true

set two_point_num_flux_type = Ra

set use_curvilinear_split_form = true

set energy_file = CF_cDG_4x4

# The PDE we want to solve
set pde_type = euler

#set conv_num_flux = two_point_flux_with_lax_friedrichs_dissipation
set conv_num_flux = two_point_flux_with_roe_dissipation
#set conv_num_flux = roe

set use_energy = false

set flux_reconstruction = cPlus

set use_inverse_mass_on_the_fly = true

set use_weight_adjusted_mass = true

set use_periodic_bc = true

set use_classical_FR = false

set enable_higher_order_vtk_output = true

set use_curvilinear_grid = true

set output_high_order_grid = false

subsection ODE solver

  set ode_output = verbose
  
  set nonlinear_max_iterations = 500000

  set print_iteration_modulo = 100

  set ode_solver_type = runge_kutta

  set initial_time_step = 0.0001
  #set initial_time_step = 0.00005

  set runge_kutta_method = rk4_ex
  #set runge_kutta_method = ssprk3_ex

#  set output_solution_every_x_steps = 20

#  set output_solution_every_x_steps = 50

end

# freestream Mach number
subsection euler
#  set mach_infinity = 0.1
    set mach_infinity = 1.195228609334 #=sqrt(2/1.4)
end

subsection flow_solver
    set courant_friedrichs_lewy_number = 0.2
    set flow_case_type = euler_sine_wave
#    set apply_initial_condition_method = interpolate_initial_condition_function
    set apply_initial_condition_method = project_initial_condition_function
   # set apply_initial_condition_method = set_initial_condition_function_on_solution_nodes
    set poly_degree = 3
 # set final_time = 0.01
 # set final_time = 2.0
 # set final_time = 0.0
  set final_time = 10.0
    subsection grid
     #   set grid_degree = 4
        set grid_left_bound = -1.0
        set grid_right_bound = 1.0
        set number_of_grid_elements_per_dimension = 2
    end
end

subsection manufactured solution convergence study
  set use_manufactured_source_term = true
end
