# Listing of Parameters
# ---------------------

set test_type = burgers_rewienski_ROM

# Number of dimensions
set dimension = 1

# The PDE we want to solve.
set pde_type  = burgers_rewienski
set use_weak_form = true
set use_collocated_nodes = false

# use the grid refinement study class to generate the grid
subsection grid refinement study
 set num_refinements = 8
 set poly_degree = 0
 set grid_left = 0.0
 set grid_right = 100.0
end

#Reduced order parameters
subsection reduced order
  set rewienski_a = 5
  set rewienski_b = 0.06
  set adaptation_tolerance = 0.0001
  set adapt_coarse_basis_constant = 3
  set coarse_basis_dimension = 8
  set fine_basis_dimension = 64
end

subsection linear solver
  set linear_solver_type = direct
end

subsection ODE solver
  # Maximum nonlinear solver iterations
  set nonlinear_max_iterations = 50

  set output_solution_every_x_steps = 2

  # Nonlinear solver residual tolerance
  set nonlinear_steady_residual_tolerance = 1e-12

  # Print every print_iteration_modulo iterations of the nonlinear solver
  set print_iteration_modulo              = 1

  # Explicit or implicit solverChoices are <explicit|implicit>.
  set ode_solver_type                         = pod_galerkin
end

subsection manufactured solution convergence study
  set use_manufactured_source_term = true
end


