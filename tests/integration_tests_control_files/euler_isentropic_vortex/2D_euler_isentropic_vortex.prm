# -------------------
# Number of dimensions
set dimension = 2

set test_type = euler_isentropic_vortex

set use_weak_form = false

set flux_nodes_type = GLL

set use_split_form = false

set two_point_num_flux_type = IR

set use_curvilinear_split_form = false

set energy_file = CF_cDG_4x4

set use_asymptotic_stable = false

# The PDE we want to solve
set pde_type = euler

#set conv_num_flux = entropy_conserving_flux_with_lax_friedrichs_dissipation
#set conv_num_flux = central_flux
#set conv_num_flux = asymptotic_stable_flux
#set conv_num_flux = two_point_flux
set conv_num_flux = lax_friedrichs

set use_energy = false

set flux_reconstruction = cDG

set use_inverse_mass_on_the_fly = true

set use_weight_adjusted_mass = false

set use_periodic_bc = true

set use_classical_FR = false

set enable_higher_order_vtk_output = true

subsection ODE solver

  set ode_output = verbose
  
  set nonlinear_max_iterations = 500000

  set print_iteration_modulo = 100

  set ode_solver_type = runge_kutta

  set initial_time_step = 0.0001
  #set initial_time_step = 0.00005

  set runge_kutta_method = rk4_ex

  set output_solution_every_x_steps = 100

end

# freestream Mach number
subsection euler
#  set mach_infinity = 0.1
    set mach_infinity = 1.195228609334 #=sqrt(2/1.4)
end

subsection flow_solver
    set flow_case_type = euler_isentropic_vortex
#    set apply_initial_condition_method = interpolate_initial_condition_function
    set poly_degree = 3
    set final_time = 23.66431913239
    subsection grid
        set grid_left_bound = -10.0
        set grid_right_bound = 10.0
        set number_of_grid_elements_per_dimension = 3
    end
end

